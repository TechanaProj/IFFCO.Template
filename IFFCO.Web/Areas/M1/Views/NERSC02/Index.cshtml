<script>

    $(document).ready(function () {
        $('#AllotmentNo').select2({
            placeholder: 'Select an Allotment No',
            allowClear: true,
            width: '100%',
            closeOnSelect: true
        });
    });

    $(document).ready(function () { 
        // Form submission event handler
        $(document).on("submit", "#queryForm", function (event) {
            event.preventDefault();

            const formData = {
                FromDate: $("#FromDate").val(),
                ToDate: $("#ToDate").val(),
                PlantCD: $("#PlantCD").val(),
                AllotmentNo_text: $("#AllotmentNo").val()
            };

            $.post('@Url.Action("Query", "NERSC02", new { area = "M1" })', formData)
                .done(handleResponse)
                .fail(handleAjaxError);
        });


        
        // Handle Compute button click
        $(document).on("click", ".sendMailButton", function (event) {
            event.preventDefault();
            debugger;
            const button = $(this).prop("disabled", true);
            const row = button.closest("tr");

            const requestData = {
                FromDate: $("#FromDate").val(),
                ToDate: $("#ToDate").val(),
                AllotmentNo: row.find("td:eq(4)").text(),
                SlNo: row.find("td:eq(1)").text(),
                electricityCount: row.find(".electricityCount").val(),
                elecRate: row.find(".elecRate").val()
            };

            if (!requestData.FromDate || !requestData.ToDate || !requestData.AllotmentNo) {
                showAlert("All required fields must be filled.");
                button.prop("disabled", false);
                return;
            }

            $.post('@Url.Content("~/")M1/NERSC02/Compute', requestData)
                .done(response => {
                    Swal.fire({
                        icon: response.success ? 'success' : 'error',
                        title: response.success ? 'Computation Successful' : 'Error',
                        text: response.success ? `Allotment ID: ${requestData.AllotmentNo}\nAmount: ${response.data.toFixed(2)}` : response.error
                    });
                })
                .fail(handleAjaxError)
                .always(() => button.prop("disabled", false));
        });

        // Populate table with response data
        function handleResponse(response) {
            if (response.success) {
                populateTable(response.data);
            } else {
                showAlert("Error: " + response.error);
            }
        }

        // Populate table with response data
        function populateTable(data) {
            const tableBody = $("#tableBody").empty();
            data.forEach(item => tableBody.append(createTableRow(item)));
        }

        // Create a table row
        function createTableRow(item) {
            return `
                <tr>
                    <td>${item.personalNo || ''}</td>
                    <td>${item.slNo || ''}</td>
                    <td>${item.quarterCategory || ''}</td>
                    <td>${item.quarterNo || ''}</td>
                    <td>${item.allotmentNo || ''}</td>
                    <td>${formatDate(item.allotmentDate)}</td>
                    <td>${formatDate(item.marketHrrFromDate)}</td>
                    <td>${formatDate(item.vacancyDate)}</td>
                    <td><input type="text" class="form-control elecRate" value="${item.elecRate || ''}" /></td>
                    <td><input type="text" class="form-control electricityCount" value="${item.electricityCount || ''}" /></td>
                    <td>
                        <button class="sendMailButton" data-unitCode="${item.unitCode || ''}" data-allotmentNo="${item.allotmentNo || ''}">
                            Compute
                        </button>
                    </td>
                </tr>`;
        }

        // Fetch rent code based on allotment number


        // Handle AJAX errors
        function handleAjaxError(xhr, status, error) {
            console.error("AJAX Error:", status, error);
            Swal.fire({ icon: 'error', title: 'Error', text: `An error occurred: ${error}` });
        }

        // Utility function to format date
        function formatDate(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            return isNaN(date.getTime()) ? '' : `${String(date.getDate()).padStart(2, '0')}/${String(date.getMonth() + 1).padStart(2, '0')}/${date.getFullYear()}`;
        }

        // Show alert function
        function showAlert(message) {
            Swal.fire({ icon: 'error', title: 'Error', text: message });
        }
    });

    // Global Validate function (fixes "Validate is not defined" error)
    function Validate() {
        return true; // Modify with actual validation logic
    }

    function fetchRentCode() {
            $.get('@Url.Content("~/")M1/NERSC02/GetRentCode', { allotmentNo: $("#AllotmentNo").val() })
                .done(response => $("#rentCode").text(response.rentCode || ''))
                .fail(error => console.error("Error fetching rent code:", error));
        }
</script>



